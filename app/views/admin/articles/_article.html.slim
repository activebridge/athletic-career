tr
  td= cl_image_tag(article.image.url(:small))
  td= article.title
  td== short_text(article)
  td= link_to :show, admin_article_path(article)
  td= link_to :edit, edit_admin_article_path(article)
  td= link_to :delete, admin_article_path(article), data: { confirm: t('are_you_sure') }, method: :delete
